{% extends "base.html.twig" %}

{% block title %}Se connecter{% endblock %}

{% block body %}
<div class="container mt-4 border" style="width: 30%; margin: auto;">

    {% if error %}
        <div class="alert alert-danger">{{  error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <div class="text-center">
        <p><img src="{{ asset('images/oriane.PNG')}}"  class="rounded-circle" alt="photo de l'administrateur"</p>
        <p style="font-size: 1.5em;">Connexion <span class="text-danger">Admin</span></p>
        <p>Accèdez à la configuration des menus<span class="text-muted"> ( demo*2 )</span></p><hr>
    </div>
    <form method="post" action="{{ path('login') }}">
      <div class="form_group">
        <label for="username" class="control-label">Identifiant | Nom d'utilisateur</label>
        <input type="text" name="_username" id="username" class="form-control" value="{{ last_username }}">
      </div>
      <div class="form_group">
        <label for="password" class="control-label">Mot de passe</label>
        <input type="password" name="_password" id="password" class="form-control">
      </div>
      <button type="submit" class="btn btn-info my-2 mx-auto" style="border-radius: 20px;">Se Connecter</button>
    </form>
</div>

{% endblock %}
